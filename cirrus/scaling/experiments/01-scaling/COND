SCALE_FACTORS = [1, 10, 20]

run_experiment_group(
  name="redshift",
  run="./run_redshift.sh",
  experiments=[
    ExperimentInstance(
      name="redshift-{}".format(scale_factor),
      options={
        "sf": scale_factor,
      },
    )
    for scale_factor in SCALE_FACTORS
  ],
)

run_experiment_group(
  name="aurora",
  run="./run_aurora.sh",
  experiments=[
    ExperimentInstance(
      name="aurora-{}".format(scale_factor),
      options={
        "sf": scale_factor,
        "warmup": 1,
      },
    )
    for scale_factor in SCALE_FACTORS
  ],
)
